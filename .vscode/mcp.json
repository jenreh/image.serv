{
    "servers": {
        "fetch": {
            "command": "uvx",
            "args": [
                "mcp-server-fetch",
                "--ignore-robots-txt"
            ]
        },
        "memory": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-memory"
            ]
        },
        "code-reasoning": {
            "command": "npx",
            "args": [
                "-y",
                "@mettamatt/code-reasoning"
            ]
        },
        // "context7": {
        //     "type": "http",
        //     "url": "https://mcp.context7.com/mcp",
        // },
        "duckduckgo": {
            "command": "uvx",
            "args": [
                "duckduckgo-mcp-server"
            ]
        },
        // Image generation MCP server
        "image-generation": {
            "type": "http",
            "url": "http://localhost:8000/mcp"
        }
    }
}
