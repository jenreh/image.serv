# ============================================================================
# Image Generation MCP Server - Environment Configuration
# Copy to .env and fill in your actual values
# ============================================================================

# REQUIRED: Azure OpenAI API Configuration
OPENAI_API_KEY=your-azure-openai-api-key-here
OPENAI_BASE_URL=https://your-resource-name.openai.azure.com

# OPTIONAL: Google AI Configuration
GOOGLE_API_KEY=your-google-api-key-here

# OPTIONAL: Backend server URL for image download URLs
# This is used to construct the URL paths returned in responses
# For Docker: use http://host.docker.internal:8000 or your actual hostname
BACKEND_SERVER=http://localhost:8000

# OPTIONAL: Temporary image storage directory
# Generated images are saved here (must be writable)
# For Docker: use /app/images (mounted volume)
TMP_PATH=./images

# OPTIONAL: Default response format
# Options: "image" | "markdown" | "adaptive_card"
DEFAULT_RESPONSE_FORMAT=markdown

# OPTIONAL: Logging level
# Options: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_LEVEL=INFO

# OPTIONAL: Server port
PORT=8000
